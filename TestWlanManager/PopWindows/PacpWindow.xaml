<Window x:Class="TestWlanManager.PopWindows.PacpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWlanManager.PopWindows"
        mc:Ignorable="d"
        Title="PacpWindow" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid Name="Packets">
            <DataGrid.Columns>
                <DataGridTextColumn Header="协议" Foreground="{StaticResource DataGridRowFore}" Binding="{Binding Protocol}" Width="*">
                </DataGridTextColumn>
                <DataGridTextColumn Header="数据长度" Binding="{Binding DataLen}"  Width="*">
                </DataGridTextColumn>
                <DataGridTextColumn Header="源地址" Binding="{Binding SourceAddress}"  Width="*">
                </DataGridTextColumn>
                <DataGridTextColumn Header="目标地址" Binding="{Binding DestinationAddress}"  Width="*">
                </DataGridTextColumn>
                <DataGridTextColumn Header="描述" Binding="{Binding Desc}"  Width="*">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
